<meta name="viewport" content="width=device-width">
<style>
body {
  font-family: 'Open Sans', sans-serif;
  margin:0;
  padding:0;
  background-color: #f6f6f6;
  color: #333;
}

iframe {
  float: right;
  margin:12px;
}

#header h1 {
  color: #fff;
  max-width: 405px;
  height: 152px;
  margin: auto;
  background: url('static/byrd_logo_expanded.svg') center center no-repeat;
  background-size: 100%;
  text-indent: -9999px;
}
#header {
  text-align:center;
  padding:20px;
  margin-top: 64px;
}
.wrapper {
  margin:25px auto;
  width: 1010px;
  overflow: hidden;
  margin-top: -6px;
}
#byrd-search {
  height:130px;
  text-align:center;
  top:30px;
  margin:auto;
  width: 60%;
  min-height:0;
}

#byrd-about {
  width:45%;
  float:left;
  padding-left:50px;
}
#byrd-shredder {
  width:45%;
  float:left;
}
#statusline {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  overflow: hidden;
  background: #e2e2e2;
}
#indicator {
  float: left;
  margin: 12px;
  width: 24px;
  height: 24px;
  border-radius: 12px;
}
#indicator.idle {
  background-color: #d2d2d2;
}
#indicator.working {
  background-color: blue;
}
#indicator.failed {
  background-color: red;
}
#indicator.success {
  background-color: green;
}
#statusline .status {
  float: left;
  margin: 12px;
}
#unshred-blueprint-name {
  font-size: 26px;
  padding: 12px 24px;
  border: none;
  border-radius: 3px;
  box-shadow: 0 3px 5px #d2d2d2;
  background: #fefefe;
  width: 545px;
}

#blueprint-name {
  font-size: 16px;
  padding: 6px 12px;
  border: 1px solid #719a48;
  border-radius: 3px;
  background: #fefefe;
  width: 400px;
}
#search-button {
  width: 48px;
  height: 48px;
  display: inline-block;
  position: relative;
  top: -52px;
  left: 269px;
  background: url('/static/search.svg') center center no-repeat #719a48;
  border: 0;
  text-indent: -9999px;
  overflow: hidden;
  border-radius: 3px;
  background-size: 80%;
}

#distribute, #goto-dropzone {
  background: url('/static/upload.svg') 10px center no-repeat #719a48;
  background-size: 32px;
  height: 48px;
  display: inline-block;
  position: relative;
  top: -1px;
  left: 18px;
  border: 0;
  overflow: hidden;
  border-radius: 3px;
  color: #ffffff;
  padding-left: 48px;
  font-size: 18px;
  padding-right: 12px;
  float: right;
}

#goto-dropzone {
  background-image: url('static/goback.svg');
  float: left;
}

#goto-dropzone:hover {
  opacity: 0.8;
  cursor: pointer;
}

#search-button:hover, #distribute:hover {
  opacity: 0.8;
  cursor: pointer;
}

.bird-search-input {

}

#byrd-about {
  width: 480px;
  float: left;
}

#unshred-form {
  height: 50px;
}

#byrd-shredder {
  width: 480px;
  float: left;
}

h3 {
  color: #55487e;
}

a {
  color: #719a48;
  text-decoration: none;
}

a:hover {
  text-decoration: underline;
}

p {
  font-size: 14px;
}

#dropzone {
  background-size: 20%;
  border-radius: 3px;
  margin: 12px 0;
  border: 3px dashed #ccc;
  text-align: center;
  padding: 24px;
  color: #55487e;
}

#dropzone:hover {
  cursor: pointer;
}

#dropzone.hover {
  background-color: #cccccc;
}

.mobile {
  display: none;
}

#downloadme {
  text-align: center;
  margin-bottom: 12px;
}

#downloadme a {
  background: #719a48;
  color: #fff;
  padding: 12px;
  border-radius: 3px;
}

#downloadme a:hover {
  opacity: 0.8;
  cursor: pointer;
  text-decoration: none;
}

@media (max-width: 1052px) {
  .wrapper {
    width: auto;
  }

  #byrd-about, #byrd-shredder {
    width: 430px;
    float: none;
    padding: 0;
    margin: 24px auto;
  }

  #dropzone {
    background-size: 14%;
  }

  #distribute, #goto-dropzone {
    top: 0;
    left: 0;
    font-size: 14px;
  }

  aside {
    width: auto !important;
    overflow: hidden;
  }

  #byrd-search {
    width: auto;
  }

  .ctr {
    margin: 24px;
  }

  #unshred-blueprint-name {
    width: auto;
    min-width: 352px;
  }

  #search-button {
    width: 54px;
    height: 54px;
    top: -4px;
    left: 0;
    box-shadow: 0 3px 5px #d2d2d2;
  }
}

@media (max-width: 506px) {
  .ctr {
    margin: 6px;
  }

  #byrd-about, #byrd-shredder {
    width: 90%;
  }

  #blueprint-name {
    width: 100%;
    display: table-cell;
    position: relative;
    left: -12px;
  }

  #distribute, #goto-dropzone {
    top: 0;
    left: 0;
    font-size: 14px;
  }

  aside {
    width: auto !important;
    overflow: hidden;
  }

  .mobile {
    display: inline;
  }

  .desktop {
    display: none;
  }

  #statusline .status {
    float: left;
    margin: 6px 0;
    font-size: 12px;
  }

  #indicator {
    margin: 8px;
    width: 12px;
    height: 12px;
  }

  iframe {
    display: block;
    margin: 40px auto;
    clear: both;
    float: none;
    margin-bottom: 12px;
  }

  #dropzone {
    background-size: 25%;
  }

  #unshred-blueprint-name {
    font-size: 16px;
    padding: 12px;
    display: table-cell;
    min-width: 0;
  }

  #search-button {
    width: 42px;
    height: 42px;
    top: 0;
  }
}
</style>
